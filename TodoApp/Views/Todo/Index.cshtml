@model IEnumerable<TodoApp.Domain.Entities.Todo>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid bg-black d-flex flex-column align-items-center">

    <a 
        href="@Url.Action("Create", "Todo")"
        class="btn btn-primary mb-4"
    >
        Create Todo
    </a>

    <div class="container d-flex flex-column align-items-center">
        @foreach (var todo in Model)
        {
            <div class="card">
                <div class="card-body d-flex flex-column align-items-center gap-3">
                    <h3 class="text-white fw-bold fs-2">@todo.Name</h3>

                    <h6 class="text-white fs-4">@todo.Status</h6>

                </div>
            </div>
        }
    </div>



</div>